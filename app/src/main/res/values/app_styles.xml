<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Weather.TextAppearance.Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/app_text_size_title_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Weather.TextAppearance.Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textSize">@dimen/app_text_size_body_16</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
